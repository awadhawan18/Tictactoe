<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/box2"
    tools:context="com.example.android.tictactoe.MainActivity">

    <TextView
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:id="@+id/players"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:id="@+id/line"
        android:layout_below="@+id/eight"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#000"
        android:textSize="40sp"
        android:id="@+id/one"
        android:layout_toLeftOf="@+id/two"
        android:layout_above="@+id/five"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_marginTop="16dp"
        android:onClick="one"
        android:clickable="true"/>

    <TextView
        android:onClick="two"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="#000"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/five"
        android:id="@+id/two"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:onClick="three"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="#000"
        android:textSize="40sp"
        android:layout_toRightOf="@id/two"
        android:layout_above="@+id/five"
        android:paddingRight="16dp"
        android:id="@+id/three"
        android:paddingLeft="16dp"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:onClick="four"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textColor="#000"
        android:textSize="40sp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/five"
        android:id="@+id/four"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:onClick="five"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textColor="#000"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/five"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:onClick="six"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textColor="#000"
        android:textSize="40sp"
        android:layout_toRightOf="@id/five"
        android:layout_centerVertical="true"
        android:id="@+id/six"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:onClick="seven"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textColor="#000"
        android:textSize="40sp"
        android:layout_below="@id/five"
        android:layout_toLeftOf="@+id/eight"
        android:id="@+id/seven"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:onClick="eight"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textColor="#000"
        android:textSize="40sp"
        android:layout_below="@id/five"
        android:layout_centerHorizontal="true"
        android:id="@+id/eight"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:onClick="nine"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textColor="#000"
        android:textSize="40sp"
        android:layout_below="@id/four"
        android:layout_toRightOf="@id/eight"
        android:id="@+id/nine"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000"
        android:textSize="35sp"
        android:layout_above="@+id/reset"
        android:id="@+id/winner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="reset"
        android:id="@+id/reset"/>

</RelativeLayout>
